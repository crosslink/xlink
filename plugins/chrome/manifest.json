{
  "manifest_version": 2,

  "name": "WikifyMe",
  "description": "WikifyMe extension wikifys web pages (news, blog, etc.) by generating anchors, which are linked to Wikipedia pages, in articles.",
  "version": "1.0",

  "permissions": [
  	"activeTab",
  	"tabs", 
  	"http://*/*",
    "https://*/*"
  ],
  
  "background": {
  	"persistent": false,
    "scripts": ["wikifyme.js"]
  },
  
    "content_scripts": 
    {
      "matches": ["*"],
      "css": ["wikifyme.css"],
      "js": ["events.js"]
    },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Wikify me!!!"
  }
}